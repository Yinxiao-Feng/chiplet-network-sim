      "buildRoot": "${projectDir}\\builds\\${name}",
      "installRoot": "${projectDir}\\install\\${name}",
      "inheritEnvironments": [ "msvc_x64_x64" ]
    },
    {
      "name": "WSL-GCC-Release",
      "generator": "Ninja",
